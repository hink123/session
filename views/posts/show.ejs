<%- include('../partials/header') %>
<div class="row bootstrap snippets">
    <h3>
        <%= post.userName %>
    </h3>
    <h3>
        <%= post.createdAt %>
    </h3>
    <h3>
        <%= post.description %>
    </h3>
    <h3>
        <%= post.time %>
    </h3>
    <h3>
        Session: <%= JSON.parse(post.day).spot_name %>, <%= JSON.parse(post.day).date %>, <%= JSON.parse(post.day).shape_full %>, <%= JSON.parse(post.day).size %>ft 
    </h3>
</div>

<% post.comments.forEach(function(comment, idx) { %>
    <div>
        <h4>
            <%= comment.userName %>
        </h4>
        <h4>
            <%= comment.text %>
        </h4>
        <h4>
            <%= comment.createdAt %>
        </h4>
        <% if (comment.user) { %>
        <% if (comment.user.toString() === user._id.toString()) { %>
            <form action="/posts/<%= post._id %>/comments/<%= idx %>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
            </form>
        <% }} %>
    </div>
    <br><br>
<% }) %>

<form action="/posts/<%= post._id%>/comments" method="POST">
    <label>Add a Comment</label>
    <textarea name="text" cols="30" rows="10"></textarea>
    <button type="submit">Submit</button>
</form>




<%- include('../partials/footer') %>